# Database Configuration
DB_URL=jdbc:postgresql://localhost:5432/fulus_ai_db
DB_USERNAME=postgres
DB_PASSWORD=your_password_here

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo
OPENAI_ADMIN_MODEL=gpt-4-turbo

# Admin Business Insights Configuration
ADMIN_INSIGHTS_ENABLED=true
ADMIN_ALLOWED_IPS=127.0.0.1,::1  # Comma-separated IP addresses for admin access (optional)

# AI Chat Memory Configuration (Optional - uses defaults if not set)
# CHAT_MEMORY_MAX_MESSAGES=20
# CHAT_MEMORY_CACHE_TTL=3600
# CHAT_MEMORY_PRUNE_DAYS=30

# Voice Assistant Configuration (Optional - uses defaults if not set)
# VOICE_UPLOAD_DIR=/tmp/fulus-voice
# VOICE_TTS_VOICE=nova

# Security & JWT Configuration
JWT_SECRET_KEY=change-this-to-a-secure-random-secret-key-at-least-256-bits-long-for-production
# JWT_ACCESS_TOKEN_EXPIRATION=86400000  # 24 hours (optional)
# JWT_REFRESH_TOKEN_EXPIRATION=604800000 # 7 days (optional)

# Spring Profile
SPRING_PROFILE=dev

# CORS Configuration (comma-separated list)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8081

# Server Configuration
SERVER_PORT=8080

# Production Database Pool Settings (Optional)
DB_POOL_SIZE=20
DB_MIN_IDLE=10

# AWS Configuration (Production Only)
AWS_REGION=us-east-1
EC2_INSTANCE_ID=

# Security Settings (Production Only)
REQUIRE_SSL=false
